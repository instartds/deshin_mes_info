					}
				}
			})/*,{
					fieldLabel: '합계표',
		           	name: '',
		           	xtype: 'checkboxfield',
			       	inputValue: '1',
			       	//inputValue: '',
			       	//checked: false,
			       	listeners: {
	               		change: function (checkbox, newVal, oldVal) {
	               			panelSearch.setValue('', newVal);
	                    }
			       	}
		    	}*/],
   		setAllFieldsReadOnly: function(b) {
				var r= true
				if(b) {
					var invalid = this.getForm().getFields().filterBy(function(field) {
																		return !field.validate();
